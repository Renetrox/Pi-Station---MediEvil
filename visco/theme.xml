<theme>

	<formatVersion>3</formatVersion>
	
	<!-- Incluir configuración base -->
	<include>./../Swatch.xml</include>

	<!-- Vista común para todos los sistemas -->
	<view name="system, basic, detailed, video">
		<image name="logo">
			<!-- Usar una carpeta común para los logos -->
			<path>./_inc/caratulas/${system.theme}.png</path>
		</image>
	</view>

	<!-- Vistas específicas si es necesario -->
	<view name="basic">
		<image name="background">
			<!-- Fondo específico para la vista básica -->
			<path>./_inc/backgrounds/${system.theme}_basic.jpg</path>
		</image>
	</view>

	<view name="detailed">
		<image name="background">
			<!-- Fondo específico para la vista detallada -->
			<path>./_inc/backgrounds/${system.theme}_detailed.jpg</path>
		</image>
	</view>

</theme>
